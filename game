<body>
  <div class="app">
    <div class="topbar">
      <div class="avatar">m</div>
      <div class="title">
        <b>Trợ thủ AI - Moni</b>
        <div>Trợ thủ AI cá nhân của bạn</div>
      </div>
      <div style="margin-left:auto" class="row">
        <span class="chip" id="modeChip">Chưa chọn chế độ</span>
      </div>
    </div>

    <!-- Screen 1: Mode -->
    <section class="screen active" id="screen-mode">
      <div class="panel">
        <div class="h1">Chọn chế độ chơi</div>
        <p class="p">Chọn <b>Cá nhân</b> hoặc <b>Nhóm bạn</b> để bắt đầu sắm Tết nhé.</p>
      </div>
      <div class="spacer"></div>

      <div class="modeWrap">
        <!-- nếu có ảnh assets/mode-select.png thì sẽ hiện -->
        <div class="modeFallback"></div>
        <img class="modeBg" src="./assets/mode-select.png" alt="" onerror="this.style.display='none'" />

        <div class="modeBtns">
          <button class="bigBtn" id="btnSolo" type="button">
            <b>Cá nhân</b>
            <span>Chơi một mình, lập kế hoạch sắm Tết</span>
          </button>
          <button class="bigBtn" id="btnGroup" type="button">
            <b>Nhóm bạn</b>
            <span>Chơi cùng bạn bè, cùng nhau sắm Tết</span>
          </button>
        </div>
      </div>
    </section>

    <!-- Screen 2: Checklist -->
    <section class="screen" id="screen-list">
      <div class="panel">
        <div class="h1">Checklist đồ sắm Tết</div>
        <p class="p">Tick những món bạn định mua. Xong bấm <b>Tiếp theo</b>.</p>

        <div class="checklist" id="checklist"></div>

        <div class="spacer"></div>
        <button class="btn" id="btnNextBudget" type="button">Tiếp theo</button>
        <div class="spacer"></div>
        <button class="btn secondary" id="btnBackMode" type="button">Quay lại</button>
      </div>
    </section>

    <!-- Screen 3: Moni budget reply -->
    <section class="screen" id="screen-budget">
      <div class="panel">
        <div class="chat">
          <div class="bubbleRow right">
            <div class="bubble user" id="userBubble"></div>
          </div>

          <div class="bubbleRow">
            <div class="avatar" style="width:34px;height:34px;border-radius:12px;">m</div>
            <div>
              <div class="bubble bot" id="botBubble"></div>
              <div class="monoSmall">Now</div>
            </div>
          </div>
        </div>

        <div class="spacer"></div>
        <button class="btn" id="btnEnterShop" type="button">Vào shop</button>
        <div class="spacer"></div>
        <button class="btn secondary" id="btnBackList" type="button">Quay lại</button>
      </div>
    </section>

    <!-- Screen 4: Shop -->
    <section class="screen" id="screen-shop">
      <div class="panel">
        <div class="shopHeader">
          <div>
            <div class="h1" style="margin:0">Shop sắm Tết</div>
            <div class="p" style="margin-top:4px">Chọn món và bấm mua. Tiền sẽ trừ dần.</div>
          </div>
          <div class="chip">
            Còn lại: <span class="money" id="moneyLeft">0đ</span>
          </div>
        </div>

        <div class="tabs" id="tabs"></div>
        <div class="grid" id="shopGrid"></div>

        <div class="bag">
          <b>Giỏ đồ đã mua</b>
          <ul id="bagList"></ul>
        </div>

        <div class="footerActions">
          <button class="btn secondary" id="btnResetShop" type="button">Chơi lại</button>
          <button class="btn" id="btnBackBudget" type="button">Quay lại</button>
        </div>
      </div>
    </section>

  </div>

  <script>
    // ===== State =====
    const state = {
      mode: null,                 // "Cá nhân" | "Nhóm bạn"
      selected: new Set(),        // checklist item ids
      budget: 600000,             // default 600k
      moneyLeft: 600000,
      bag: []                     // purchased items
    };

    // ===== Data =====
    const checklistItems = [
      { id: "ao-dai", name: "Áo dài", sub: "Diện Tết xinh xắn" },
      { id: "dao", name: "Cây đào", sub: "Trang trí phòng khách" },
      { id: "quat", name: "Cây quất", sub: "May mắn, sung túc" },
      { id: "mut", name: "Mứt Tết", sub: "Đãi khách" },
      { id: "banh-chung", name: "Bánh chưng", sub: "Món truyền thống" },
      { id: "hat-dua", name: "Hạt dưa", sub: "Nhâm nhi ngày Tết" },
      { id: "nuoc-ngot", name: "Nước ngọt", sub: "Tiếp khách" },
      { id: "bao-li-xi", name: "Bao lì xì", sub: "Lộc đầu năm" }
    ];

    const shopCatalog = {
      "Đào": [
        { sku: "dao-100", name: "Đào mini", price: 100000 },
        { sku: "dao-200", name: "Đào vừa", price: 200000 },
        { sku: "dao-300", name: "Đào to", price: 300000 }
      ],
      "Quất": [
        { sku: "quat-120", name: "Quất mini", price: 120000 },
        { sku: "quat-220", name: "Quất vừa", price: 220000 },
        { sku: "quat-350", name: "Quất bonsai", price: 350000 }
      ],
      "Áo dài": [
        { sku: "aodai-150", name: "Áo dài basic", price: 150000 },
        { sku: "aodai-250", name: "Áo dài hoa", price: 250000 },
        { sku: "aodai-400", name: "Áo dài cao cấp", price: 400000 }
      ],
      "Mứt Tết": [
        { sku: "mut-50", name: "Mứt gừng", price: 50000 },
        { sku: "mut-80", name: "Mứt dừa", price: 80000 },
        { sku: "mut-120", name: "Combo mứt", price: 120000 }
      ],
      "Đồ ăn": [
        { sku: "banhchung-90", name: "Bánh chưng", price: 90000 },
        { sku: "hatdua-35", name: "Hạt dưa", price: 35000 },
        { sku: "nuocngot-60", name: "Thùng nước ngọt", price: 60000 }
      ],
      "Phụ kiện": [
        { sku: "baolixi-30", name: "Bao lì xì", price: 30000 },
        { sku: "denday-70", name: "Dây đèn trang trí", price: 70000 },
        { sku: "decal-40", name: "Decal Tết", price: 40000 }
      ]
    };

    // ===== Helpers =====
    const vnd = (n) => n.toLocaleString("vi-VN") + "đ";

    function showScreen(id){
      document.querySelectorAll(".screen").forEach(s => s.classList.remove("active"));
      document.getElementById(id).classList.add("active");
    }

    function setMode(mode){
      state.mode = mode;
      document.getElementById("modeChip").textContent = "Chế độ: " + mode;
    }

    // ===== Screen 2: Checklist render =====
    const checklistEl = document.getElementById("checklist");
    function renderChecklist(){
      checklistEl.innerHTML = "";
      checklistItems.forEach(it => {
        const row = document.createElement("label");
        row.className = "item";

        const cb = document.createElement("input");
        cb.type = "checkbox";
        cb.checked = state.selected.has(it.id);
        cb.addEventListener("change", () => {
          if(cb.checked) state.selected.add(it.id);
          else state.selected.delete(it.id);
        });

        const text = document.createElement("div");
        text.innerHTML = `<div class="name">${it.name}</div><div class="sub">${it.sub}</div>`;

        row.appendChild(cb);
        row.appendChild(text);
        checklistEl.appendChild(row);
      });
    }

    // ===== Screen 4: Shop render =====
    const tabsEl = document.getElementById("tabs");
    const gridEl = document.getElementById("shopGrid");
    const bagEl = document.getElementById("bagList");
    const moneyLeftEl = document.getElementById("moneyLeft");

    let currentCategory = Object.keys(shopCatalog)[0];

    function renderTabs(){
      tabsEl.innerHTML = "";
      Object.keys(shopCatalog).forEach(cat => {
        const b = document.createElement("button");
        b.className = "tab" + (cat === currentCategory ? " active" : "");
        b.textContent = cat;
        b.type = "button";
        b.addEventListener("click", () => {
          currentCategory = cat;
          renderTabs();
          renderGrid();
        });
        tabsEl.appendChild(b);
      });
    }

    function renderGrid(){
      gridEl.innerHTML = "";
      const items = shopCatalog[currentCategory];

      items.forEach(it => {
        const card = document.createElement("div");
        card.className = "cardShop";

        const title = document.createElement("b");
        title.textContent = it.name;

        const price = document.createElement("div");
        price.className = "price";
        price.textContent = vnd(it.price);

        const buy = document.createElement("button");
        buy.className = "buy";
        buy.type = "button";
        buy.textContent = "Mua";
        buy.disabled = (state.moneyLeft < it.price);

        buy.addEventListener("click", () => {
          if(state.moneyLeft < it.price) return;
          state.moneyLeft -= it.price;
          state.bag.push({ ...it, category: currentCategory });
          updateMoney();
          renderGrid();
          renderBag();
        });

        card.appendChild(title);
        card.appendChild(price);
        card.appendChild(buy);
        gridEl.appendChild(card);
      });
    }

    function renderBag(){
      bagEl.innerHTML = "";
      if(state.bag.length === 0){
        const li = document.createElement("li");
        li.textContent = "Chưa mua gì.";
        bagEl.appendChild(li);
        return;
      }
      state.bag.forEach(x => {
        const li = document.createElement("li");
        li.textContent = `${x.name} (${x.category}) - ${vnd(x.price)}`;
        bagEl.appendChild(li);
      });
    }

    function updateMoney(){
      moneyLeftEl.textContent = vnd(state.moneyLeft);
    }

    function resetAll(){
      state.selected = new Set();
      state.bag = [];
      state.budget = 600000;
      state.moneyLeft = 600000;
      currentCategory = Object.keys(shopCatalog)[0];
      updateMoney();
      renderChecklist();
      renderTabs();
      renderGrid();
      renderBag();
    }

    // ===== Wire buttons =====
    document.getElementById("btnSolo").addEventListener("click", () => {
      setMode("Cá nhân");
      renderChecklist();
      showScreen("screen-list");
    });

    document.getElementById("btnGroup").addEventListener("click", () => {
      setMode("Nhóm bạn");
      renderChecklist();
      showScreen("screen-list");
    });

    document.getElementById("btnBackMode").addEventListener("click", () => {
      showScreen("screen-mode");
    });

    document.getElementById("btnNextBudget").addEventListener("click", () => {
      // tạo câu user: list tick
      const names = checklistItems
        .filter(x => state.selected.has(x.id))
        .map(x => x.name);

      const userText = names.length
        ? `Mình muốn mua đồ Tết: ${names.join(", ")}.`
        : "Mình muốn mua đồ Tết (chưa chọn món nào).";

      document.getElementById("userBubble").textContent = userText;

      // bot budget (đúng yêu cầu: “Bạn có 600.000đ để mua đồ nhé!”)
      document.getElementById("botBubble").innerHTML =
        `Bạn có <b>${state.budget.toLocaleString("vi-VN")}đ</b> để mua đồ nhé!`;

      showScreen("screen-budget");
    });

    document.getElementById("btnBackList").addEventListener("click", () => {
      showScreen("screen-list");
    });

    document.getElementById("btnEnterShop").addEventListener("click", () => {
      // vào shop reset money theo budget
      state.moneyLeft = state.budget;
      updateMoney();
      renderTabs();
      renderGrid();
      renderBag();
      showScreen("screen-shop");
    });

    document.getElementById("btnBackBudget").addEventListener("click", () => {
      showScreen("screen-budget");
    });

    document.getElementById("btnResetShop").addEventListener("click", () => {
      resetAll();
      showScreen("screen-mode");
      document.getElementById("modeChip").textContent = "Chưa chọn chế độ";
      state.mode = null;
    });

    // init
    resetAll();
  </script>
</body>
</html>
